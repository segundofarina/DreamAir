<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/favorite_single"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"

    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/favorite_image"
            android:layout_width="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/aa"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/favorite_from"
                    android:text="Buenos Aires"
                    android:textSize="18sp"
                    android:textColor="@color/light"
                    android:layout_marginTop="15dp"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text=" - "
                    android:textSize="18sp"
                    android:textColor="@color/light"
                    android:layout_marginTop="15dp"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/favorite_to"
                    android:layout_alignParentTop="true"
                    android:text="Buenos Aires"
                    android:textSize="18sp"
                    android:textColor="@color/light"
                    android:layout_marginTop="15dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/favorite_flight_number"
                    android:text="AR1800"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favorite_status"
                android:text="@string/ON_TIME"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/onTime"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>